<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--suppress SqlNoDataSourceInspection, SqlDialectInspection -->
<mapper namespace="org.clever.security.mapper.UserMapper">
    <select id="pageQuery" resultType="org.clever.security.entity.User">
        select
        uid,
        login_name,
        telephone,
        email,
        expired_time,
        enabled,
        nickname,
        avatar,
        register_channel,
        from_source,
        description,
        create_at,
        update_at
        from user
        <where>
            <if test="query.loginName!=null and query.loginName!=''">
                and login_name like concat('%', #{query.loginName}, '%')
            </if>
            <if test="query.telephone!=null and query.telephone!=''">
                and telephone = #{query.telephone}
            </if>
            <if test="query.email!=null and query.email!=''">
                and email = #{query.email}
            </if>
            <if test="query.createAtStart!=null">
                and create_at>=#{query.createAtStart}
            </if>
            <if test="query.createAtEnd!=null">
                <![CDATA[ and create_at<=#{query.createAtEnd} ]]>
            </if>
        </where>
    </select>
</mapper>